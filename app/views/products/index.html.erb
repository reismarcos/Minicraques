<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nationality</th>
      <th>Team</th>
      <th>Serie</th>
      <th>Price</th>
      <th>Code</th>
      <th>Link</th>
      <th>Box</th>
      <th>Status</th>
      <th>Line</th>
      <th>Number</th>
      <th>Picture</th>
      <th>Bio</th>
      <th>Factory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.nationality_id %></td>
        <td><%= product.team_id %></td>
        <td><%= product.serie_id %></td>
        <td><%= product.price %></td>
        <td><%= product.code %></td>
        <td><%= product.link %></td>
        <td><%= product.box %></td>
        <td><%= product.status %></td>
        <td><%= product.line_id %></td>
        <td><%= product.number %></td>
        <td><%= product.picture %></td>
        <td><%= product.bio %></td>
        <td><%= product.factory_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

